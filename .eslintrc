{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "env": {
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "ecmaFeatures": {
      "legacyDecorators": true,
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "16"
    }
  },
  "rules": {
    "indent": ["error", "tab"],
    "no-tabs": ["error", { allowIndentationTabs: true }],
    "semi": ["error", { "omitLastInOneLineBlock": true }]
  }
}
